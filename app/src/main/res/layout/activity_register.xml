<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.android.myapp.googlemapsapplication01.RegisterActivity"
    android:id="@+id/a">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="住所入力"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addr_edit"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addrへ"
        android:id="@+id/addr_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="カテゴリ"
        android:id="@+id/textView2"
        android:layout_below="@+id/addr_edit"
        android:layout_toStartOf="@+id/addr_edit" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kategori_edit"
        android:layout_below="@+id/addr_edit"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録者名"
        android:id="@+id/textView3"
        android:layout_below="@+id/kategori_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_edit"
        android:layout_below="@+id/kategori_edit"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日時"
        android:id="@+id/textView4"
        android:layout_below="@+id/name_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_edit"
        android:layout_below="@+id/name_edit"
        android:layout_alignStart="@+id/name_edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話"
        android:id="@+id/textView5"
        android:layout_below="@+id/date_edit"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tell_edit"
        android:layout_below="@+id/date_edit"
        android:layout_alignStart="@+id/date_edit" />

</RelativeLayout>
